<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#ffff">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/feelshare_world_green"
                android:layout_margin="10dp" />


            <Button
                android:id="@+id/email_provider"
                android:paddingLeft="4dp"
                android:background="@color/colorPrimaryLight"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/envelope_48"
                android:text="Email" />

            <Button
                android:id="@+id/google_provider"
                android:paddingLeft="4dp"
                android:background="@color/colorPrimaryLight"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/google_48"
                android:text="Google" />


            <Button
                android:id="@+id/facebook_provider"
                android:paddingLeft="4dp"
                android:background="@color/colorPrimaryLight"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/facebook_48"
                android:text="Facebook" />

            <Button
                android:id="@+id/twitter_provider"
                android:paddingLeft="4dp"
                android:background="@color/colorPrimaryLight"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/twitter_48"
                android:text="Twitter" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
