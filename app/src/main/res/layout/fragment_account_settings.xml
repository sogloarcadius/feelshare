<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffff"
    android:id="@+id/fragment_acount_layout_id">



    <ImageView
        android:id="@+id/account_feelshare_logo"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/feelshare_world_green"
        android:layout_margin="10dp" />


    <Button
        android:id="@+id/account_info_login"
        android:paddingLeft="4dp"
        android:background="@color/colorPrimaryLight"
        android:layout_below="@id/account_feelshare_logo"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:text="@string/title_account" />


    <Button
        android:id="@+id/account_preferences"
        android:paddingLeft="4dp"
        android:background="@color/colorPrimaryLight"
        android:layout_below="@id/account_info_login"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/settings_black_24"
        android:text="@string/user_settings" />


    <Button
        android:id="@+id/account_logout_button"
        android:background="@color/colorPrimaryLight"
        android:layout_below="@id/account_preferences"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_logout_button"/>





</RelativeLayout>
