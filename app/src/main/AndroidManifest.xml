<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.sogloarcadius.feelshare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="io.sogloarcadius.feelshare.main.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="io.sogloarcadius.feelshare.preferences.PreferenceActivity">
        </activity>

        <activity
            android:name="io.sogloarcadius.feelshare.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.sogloarcadius.feelshare.support.WebViewActivity" />
    </application>

</manifest>